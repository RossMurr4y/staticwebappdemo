{
    "routes" : [
        {
            "route" : "/login",
            "redirect" : "/.auth/login/aad"
        },
        {
            "route" : "/.auth/login/github",
            "statusCode" : 404
        },
        {
            "route" : "/.auth/login/twitter",
            "statusCode" : 404
        },
        {
            "route" : "/.auth/login/aad",
            "statusCode" : 404
        },
        {
            "route" : "/*",
            "allowedRoles" : [ "authenticated" ]
        }
    ],
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/login"
        }
    },
    "auth": {
        "identityProviders": {
            "azureActiveDirectory" : {
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/b9f0d5b3-1eae-4c33-96a3-78ef8ed66e7f",
                    "clientIdSettingName": "B2C_CLIENTID",
                    "clientSecretSettingName": "B2C_CLIENTSECRET"
                }
            }
        }
    }
}
